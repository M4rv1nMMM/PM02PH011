<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PM02PH011.Views.BindingPage"
             BackgroundColor="Beige"
             BackgroundImage="image2.jpg"
             NavigationPage.HasNavigationBar="False">
    <ContentPage.Content>
        <StackLayout BackgroundColor="Transparent" Margin="50,50,50,50">
            <Label Text="nombre" FontSize="Small" Padding="0,0,0,0" TextColor="Violet"></Label>
            <Entry x:Name="txtnombre"></Entry>

            <Label Text="apellido"></Label>
            <Entry x:Name="txtapellido"></Entry>

            <Label Text="edad"></Label>
            <Entry x:Name="txtedad" Keyboard="Numeric"></Entry>

            <Label Text="apellido"></Label>
            <Entry x:Name="txtcorreo" Keyboard="Email"></Entry>

            <Button x:Name="btnbinding" Text="Pasar por Binding" Clicked="btnbinding_Clicked" BackgroundColor="Aqua"></Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>